relational_tucker3:
  entity_embedder:
    regularize_weight: 2.5e-05
    dropout: 0.3
  relation_embedder:
    dropout: 0.1
    regularize_weight: 2.5e-03

dataset:
  name: MetaQA_half

eval:
  batch_size: 256
  metrics_per:
    relation_type: true
  trace_level: example

import:
- reciprocal_relations_model
- relational_tucker3

lookup_embedder:
  dim: 200
  initialize: uniform_
  initialize_args:
    normal_:
      mean: 0.0
      std: 0.5
    uniform_:
      a: 0.5
    xavier_normal_:
      gain: 1.0
    xavier_uniform_:
      gain: 1.0

model: reciprocal_relations_model
negative_sampling:
  num_samples:
    s: 1000
    o: 1000

reciprocal_relations_model:
  base_model:
    entity_embedder:
      dim: 200
    relation_embedder:
      base_embedder:
        type: lookup_embedder
      dim: 40000
    type: relational_tucker3

train:
  auto_correct: true
  batch_size: 1024
  loss_arg: 1.0
  lr_scheduler: ReduceLROnPlateau
  lr_scheduler_args:
    factor: 0.95
    mode: max
    patience: 7
    threshold: 0.0001
  max_epochs: 400
  optimizer_args:
    lr: 0.2
  type: negative_sampling

valid:
  early_stopping:
    min_threshold:
      epochs: 50
      metric_value: 0.05
    patience: 10

